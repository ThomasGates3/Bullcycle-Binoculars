# Crypto News Microservice Configuration
# Copy this to terraform.tfvars and fill in your values

# AWS Configuration
aws_region  = "us-east-1"
environment = "prod"

# S3 Website Configuration
bucket_name = "bullcycle-binoculars"

# Lambda Configuration
lambda_function_name = "crypto-news-enricher"
api_gateway_name     = "crypto-news-api"
api_stage_name       = "prod"

# DynamoDB Configuration
ddb_table_name = "crypto-news-cache"

# Cache Configuration
cache_ttl = 900      # 15 minutes (in seconds)
max_retries = 5

# Bedrock Configuration
bedrock_model_id = "anthropic.claude-3-haiku-20240307-v1:0"

# API Keys (REQUIRED - do not commit to git)
# Get from: https://newsdata.io/register
newsdata_api_key = "your-newsdata-api-key-here"
